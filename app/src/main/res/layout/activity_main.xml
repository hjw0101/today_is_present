<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:backgroundTint="#FFFFFF"
    android:foregroundTint="#FFFFFF"
    android:translationY="3dp"
    android:translationZ="3dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="15dp"
        android:weightSum="10"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.516"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.078">

        <ImageView
            android:id="@+id/profileImageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_weight="2"
            android:contentDescription="Profile Image"
            android:gravity="center"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/default_profile_image" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2" />

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/nameTextView"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:layout_marginHorizontal="10dp"
                android:layout_weight="8"
                android:fontFamily="@font/sh"
                android:text="Profile Name"
                android:textColor="@color/green_400"
                android:textSize="18sp"
                android:textStyle="bold" />


            <Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="8" />

            <LinearLayout
                android:id="@+id/linearLayout4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <ImageButton
                    android:id="@+id/imageButton5"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@color/white"
                    android:translationX="10dp"
                    app:srcCompat="@mipmap/ic_point_foreground"
                    tools:ignore="SpeakableTextPresentCheck" />

                <EditText
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sm"
                    android:minHeight="48dp"
                    android:text="포인트"
                    android:textColor="#133014"
                    android:textColorLink="@color/green_200" />

                <TextView
                    android:id="@+id/pp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sm"
                    android:minHeight="48dp"
                    android:text="point"
                    android:textColor="#133014"
                    android:textColorLink="@color/green_200"/>


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="350dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal"
        android:textColor="@color/textbut"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/linearLayout">

        <LinearLayout
            android:id="@+id/linearLayout6"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <ImageButton
                android:id="@+id/image_store"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:background="@color/white"
                android:gravity="center"
                app:srcCompat="@mipmap/ic_store_foreground"
                tools:ignore="SpeakableTextPresentCheck" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/sm"
                android:gravity="center"
                android:text="상점"
                android:textColor="@color/textbut"
                app:layout_constraintTop_toBottomOf="@+id/image_store" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout7"

            android:layout_width="70dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <ImageButton
                android:id="@+id/image_search"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@color/white"
                app:srcCompat="@mipmap/ic_search_foreground"
                tools:ignore="SpeakableTextPresentCheck" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/sm"
                android:gravity="center"
                android:text="검색"
                android:textColor="@color/textbut"
                app:layout_constraintTop_toBottomOf="@+id/image_search" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout8"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <ImageButton
                android:id="@+id/image_book"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@color/white"
                app:srcCompat="@mipmap/ic_book_foreground"
                tools:ignore="SpeakableTextPresentCheck" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/sm"
                android:gravity="center"
                android:text="북마크"
                android:textColor="@color/textbut"
                app:layout_constraintTop_toBottomOf="@+id/image_book" />


        </LinearLayout>


        <LinearLayout
            android:id="@+id/linearLayout10"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <ImageButton
                android:id="@+id/help"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@color/white"
                app:srcCompat="@mipmap/ic_help_foreground"
                tools:ignore="SpeakableTextPresentCheck" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/sm"
                android:gravity="center"
                android:text="도움말"
                android:textColor="@color/textbut"
                app:layout_constraintTop_toBottomOf="@+id/help" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout12"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <ImageButton
                android:id="@+id/setting_"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@color/white"
                app:srcCompat="@mipmap/ic_setting_foreground"
                tools:ignore="SpeakableTextPresentCheck" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/sm"
                android:gravity="center"
                android:text="설정"
                android:textColor="@color/textbut"
                app:layout_constraintTop_toBottomOf="@+id/setting_" />


        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="0dp"
        android:layout_height="130dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:orientation="vertical"
        android:translationY="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/linearLayout5">


        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sb"
            android:text="맞춤법 교정기"
            android:textColor="@color/textbut"
            android:translationX="10dp"
            android:translationY="2dp" />

        <EditText
            android:id="@+id/input_text"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:fontFamily="@font/sm"
            android:gravity="center"
            android:hint="@string/input"
            android:textColor="@color/textbut"
            android:textSize="15sp"
            android:translationY="10dp" />

        <EditText
            android:id="@+id/spell_check"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:enabled="false"
            android:fontFamily="@font/sm"
            android:gravity="center"
            android:hint="수정 후 결과"
            android:textColor="@color/textbut"
            android:textSize="15sp"
            android:translationY="10dp" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:translationY="10dp"
        app:layout_constraintTop_toBottomOf="@id/linearLayout1">


        <Button
            android:id="@+id/copy"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:fontFamily="@font/sm"
            android:text="복사"
            android:textColor="@color/textbut"
            android:translationX="30dp" />

        <Button
            android:id="@+id/delect_text"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:fontFamily="@font/sm"
            android:text="@string/delect"
            android:textColor="@color/textbut"
            android:translationX="35dp" />


        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:fontFamily="@font/sm"
            android:scaleX="1"
            android:text="@string/check"
            android:textColor="@color/textbut"
            android:translationX="85dp" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="225dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:orientation="vertical"
        android:translationY="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/linear_buttons">


        <Space
            android:layout_width="10dp"
            android:layout_height="10dp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sb"
            android:text="설정"
            android:textColor="@color/textbut"
            android:translationX="28dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/spell_widget_on"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:color="@color/green_300"
                android:fontFamily="@font/sm"
                android:text="맞춤법 위젯 on"
                android:textColor="@color/textbut" />

            <Space
                android:layout_width="20dp"
                android:layout_height="10dp" />

            <Button
                android:id="@+id/word_widget_on"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:color="@color/green_300"
                android:fontFamily="@font/sm"
                android:text="단어 위젯 on"
                android:textColor="@color/textbut" />
        </LinearLayout>


        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switchEnableService"
            android:layout_width="150dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:text="접근성 on/off" />

        <Button
            android:id="@+id/button"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:fontFamily="@font/sm"
            android:text="접근성 설정"
            android:textColor="#133014"
            android:textColorLink="#9ABA9C" />


        <Button
            android:id="@+id/logoutButton"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:fontFamily="@font/sm"
            android:text="로그아웃"
            android:textColor="#133014"
            android:textColorLink="@color/green_500"
            app:rippleColor="#DAABE3DE" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
