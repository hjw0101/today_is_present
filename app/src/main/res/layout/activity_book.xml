<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="96dp"
                android:layout_height="50dp"
                android:contentDescription="@string/hide_bottom_view_on_scroll_behavior"
                app:srcCompat="@drawable/baseline_arrow" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/sh"
                android:gravity="center"
                android:text="북마크"
                android:textSize="15sp" />

            <ImageButton
                android:id="@+id/imageButton3"
                android:layout_width="96dp"
                android:layout_height="50dp"
                android:contentDescription="@string/hide_bottom_view_on_scroll_behavior"
                app:srcCompat="@drawable/baseline_arrow_"
                tools:ignore="TouchTargetSizeCheck" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="380dp"
            android:layout_height="50dp"
            android:background="@drawable/botder_layout"
            android:orientation="horizontal"
            android:translationX="10dp"
            android:translationY="20dp">

            <EditText
                android:id="@+id/textView4"
                android:layout_width="280dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="검색어를 입력하세요" />

            <ImageButton
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:backgroundTint="#FFFFFF"
                android:contentDescription="@string/delect"
                android:translationY="2dp"
                app:srcCompat="@drawable/baseline_search_black" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="377dp"
        android:layout_height="490dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="152dp">

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <Button
                android:id="@+id/word1"
                android:layout_width="180dp"
                android:layout_height="90dp"
                android:background="#FFFFFF"
                android:text="Button"
                android:textColor="@color/textbut" />

            <Button
                android:id="@+id/word3"
                android:layout_width="180dp"
                android:layout_height="90dp"
                android:background="#FFFFFF"
                android:text="Button"
                android:textColor="@color/textbut"
                android:translationY="5dp" />

            <Button
                android:id="@+id/word5"
                android:layout_width="180dp"
                android:layout_height="90dp"
                android:background="#FFFFFF"
                android:text="Button"
                android:textColor="@color/textbut"
                android:translationY="10dp" />

            <Button
                android:id="@+id/word7"
                android:layout_width="180dp"
                android:layout_height="90dp"
                android:background="#FFFFFF"
                android:text="Button"
                android:textColor="@color/textbut"
                android:translationY="15dp" />

            <Button
                android:id="@+id/word9"
                android:layout_width="180dp"
                android:layout_height="90dp"
                android:background="#FFFFFF"
                android:text="Button"
                android:textColor="@color/textbut"
                android:translationY="20dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <Button
                android:id="@+id/word2"
                android:layout_width="180dp"
                android:layout_height="90dp"
                android:background="#FFFFFF"
                android:text="Button"
                android:textColor="@color/textbut" />

            <Button
                android:id="@+id/word4"
                android:layout_width="180dp"
                android:layout_height="90dp"
                android:background="#FFFFFF"
                android:text="Button"
                android:textColor="@color/textbut"
                android:translationY="5dp" />

            <Button
                android:id="@+id/word6"
                android:layout_width="180dp"
                android:layout_height="90dp"
                android:background="#FFFFFF"
                android:text="Button"
                android:textColor="@color/textbut"
                android:translationY="10dp" />

            <Button
                android:id="@+id/word8"
                android:layout_width="180dp"
                android:layout_height="90dp"
                android:background="#FFFFFF"
                android:text="Button"
                android:textColor="@color/textbut"
                android:translationY="15dp" />

            <Button
                android:id="@+id/word10"
                android:layout_width="180dp"
                android:layout_height="90dp"
                android:background="#FFFFFF"
                android:text="Button"
                android:textColor="@color/textbut"
                android:translationY="20dp" />


        </LinearLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>